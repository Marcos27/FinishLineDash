
<!DOCTYPE html>
<html>
  <head>
    <meta charset=utf-8>
    <title>My first Three.js app</title>
    <style>
      body { margin: 0; }
      canvas { width: 100%; height: 100% }
    </style>
  </head>
  <body>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r75/three.js"></script>
    <script>
       // setup code
      var scene = new THREE.Scene();
      var camera = new THREE.PerspectiveCamera( 75, window.innerWidth / window.innerHeight, 0.1, 1000 );
      camera.position.z = 100
      var renderer = new THREE.WebGLRenderer();
      renderer.setSize( window.innerWidth, window.innerHeight );
      document.body.appendChild( renderer.domElement );

      // drawing the cylinder
      var geometry = new THREE.CylinderGeometry( 5, 5, 20, 32 );
      var material = new THREE.MeshNormalMaterial( );
      var cylinder = new THREE.Mesh( geometry, material );
      cylinder.rotation.z = 1.57
      scene.add( cylinder );

      // drawing the cylinder
      var geometry = new THREE.CylinderGeometry( 5, 5, 20, 32 );
      var material = new THREE.MeshNormalMaterial( );
      var cylinder = new THREE.Mesh( geometry, material );
      cylinder.rotation.z = 0.0174533
      cylinder.position.y = 30
      scene.add( cylinder );

      // draw a square
      var geometry = new THREE.BoxGeometry( 20,20,20,20);
      var material = new THREE.MeshBasicMaterial( {color: 'red'} );
      var cube = new THREE.Mesh( geometry, material );
      cube.rotation.z = 0.785398
      cube.position.x = 40

      scene.add( cube );


      function render() {
        requestAnimationFrame( render );
        renderer.render( scene, camera );
        cylinder.rotation.x += .1
      }
      render();
    </script>
  </body>
</html>



















//this will place the Icon into the frist Box
var playerBlock = $("<div class='player1'></div>")
var playerPosition = 1;
$(".sq"+playerPosition).append(playerBlock);
//<------------END of code------------------->


//This function will randomly pick a number
//from 1-10
function spinnerBtn() {
var spinner = Math.random();
var moveTooSpace;
  if(spinner <= 0.10 ){
    moveTooSpace = 1
    $('.cell1').addClass('chBtn')
    console.log('spot 1');
    $('.player1').addClass('move1')
    moveGreen()
      playerMoving()
    questions()
  }else if(spinner <= 0.20 ){
    moveTooSpace = 2
    $('.cell2').addClass('chBtn')
    console.log('spot 2');
        $('.player1').addClass('move2')
        moveGreen()
  playerMoving()
    questions()
  }else if(spinner <= 0.30 ){
    moveTooSpace = 3
   $('.cell3').addClass('chBtn')
    console.log('spot 3');
    moveGreen()
      playerMoving()
    questions()
  }else if(spinner <= 0.40 ){
    moveTooSpace = 4
    $('.cell4').addClass('chBtn')
    console.log('spot 4');
    moveGreen()
    playerMoving()
    questions()
  }else if(spinner <= 0.50 ){
    moveTooSpace = 5
    $('.cell5').addClass('chBtn')
    console.log('spot 5');
    moveGreen()
     playerMoving()
    questions()
  }else if(spinner <= 0.60 ){
     moveTooSpace = 6
    $('.cell6').addClass('chBtn')
    console.log('spot 6');
    moveGreen()
     playerMoving()
    questions()
  }else if(spinner <= 0.70 ){
     moveTooSpace = 7
    $('.cell7').addClass('chBtn')
    console.log('spot 7');
    moveGreen()
 playerMoving()
    questions()
  }else if(spinner <= 0.80 ){
    moveTooSpace = 8
    $('.cell8').addClass('chBtn')
    console.log('spot 8');
    moveGreen()
     playerMoving()
    questions()
  }else if(spinner <= 0.90 ){
    moveTooSpace = 9
    $('.cell9').addClass('chBtn')
    console.log('spot 9');
    moveGreen()
     playerMoving()
    questions()
  }else{
    moveTooSpace = 10
    $('.cell10').addClass('chBtn')
    console.log('spot 10');
    moveGreen()
     playerMoving()
    questions()
  }
  console.log(spinner);
function playerMoving() {
var roll = moveTooSpace;
playerPosition = playerPosition + roll;
$(".sq"+playerPosition).append(playerBlock)
}
//<------------END of code------------------->



//this function will move the icon to "x" spaces
//the spinner lands on
function moveGreen() {
if (moveTooSpace === 1){
  var goingToo = '+=121px';
  var secMove = 1000;
}else if(moveTooSpace === 2) {
  var goingToo = '+=242px';
  var secMove = 2000;
}else if(moveTooSpace === 3) {
  var goingToo = '+=363px';
  var secMove = 3000;
}else if(moveTooSpace === 4) {
  var goingToo = '+=483px';
  var secMove = 3000;
}else if(moveTooSpace === 5) {
  var goingToo = '+=605px';
  var secMove = 3000;
}else if(moveTooSpace === 6) {
  var goingToo = '+=725px';
  var secMove = 3000;
}else if(moveTooSpace === 7) {
  var goingToo = '+=847px';
  var secMove = 4000;
}else if(moveTooSpace === 8) {
  var goingToo = '+=976px';
  var secMove = 4000;
}else if(moveTooSpace === 9) {
  var goingToo = '+=1097px';
  var secMove = 4000;
}else if(moveTooSpace === 10) {
  var goingToo = '+=1219px';
  var secMove = 4000;
}
  $('.test').animate({marginLeft: goingToo}, secMove)
    setTimeout(function(){
  prompt('question?') ;
  setTimeout(function(){
  $('.chBtn').removeClass('chBtn')
}, 1000)
}, secMove);
}
}
//<------------END of code------------------->


//This is the start of the Game srceen it
//will say Lets play and slide the option too
//to play on the screen
$('.letsPlay').slideUp(0)
$('.letsPlay').slideDown(4000)
  $('.startBtn').slideUp(2000)
  $('.startBtn').fadeIn(4000)

//
$('.startBtn').click(function() {
  $('.letsPlayMain').fadeOut(3000)
    $('.iconHolder').slideUp(0)
  $('.iconHolder').slideDown(4000)
  });
//<------------END of code------------------->

//This will Zoom the Icon picture, when the play click the
//icon they want.
$('.zoomIcon1').hide(0)
$('.zoomIcon2').hide(0)
$('.zoomIcon3').hide(0)
$('.zoomIcon4').hide(0)

$('.fristIcon').click(function() {
  $('.fristIcon').addClass('clickIcon')
  $('.zoomIcon1').toggle(1000)
    $('.zoomIcon1').toggle(2000)
  $('.clickIcon').click(function(){
 $('.fristIcon').removeClass('clickIcon')
  })
});

$('.secondIcon').click(function() {
  $('.secondIcon').addClass('clickIcon')
  $('.zoomIcon2').toggle(1000)
    $('.zoomIcon2').toggle(2000)
  $('.clickIcon').click(function(){
 $('.secondIcon').removeClass('clickIcon')
  })
});

$('.Icon3').click(function() {
  $('.Icon3').addClass('clickIcon')
  $('.zoomIcon3').toggle(1000)
    $('.zoomIcon3').toggle(3000)
  $('.clickIcon').click(function(){
 $('.Icon3').removeClass('clickIcon')
  })
});

$('.Icon4').click(function() {
  $('.Icon4').addClass('clickIcon')
  $('.zoomIcon4').toggle(1000)
    $('.zoomIcon4').toggle(3000)
  $('.clickIcon').click(function(){
 $('.Icon4').removeClass('clickIcon')
  })
});
